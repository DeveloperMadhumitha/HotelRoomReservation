@page
@model HotelRoomReservation.Pages.Customers.ListModel
@{
}
<form method="post">
    <div class="row">
        <div class="col-sm-9">
            <h3 class=text-center> List Of Customers</h3>
        </div>
        <div class="col-sm-1">
            <a href="/Customers/Add" class="btn btn-outline-info" role="button"><i class="fa fa-add">ADD</i> </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-9"> <input type="text" asp-for="@Model.SearchText" class="form-control" placeholder="search customer by name " /></div>

        <div class="col-sm-1">
            <button type="submit" asp-page-handler="search" class="btn btn-outline-primary"><i class="fa fa-search"></i> </button>
        </div>
        <div class="col">
            <button type="clear" asp-page-handler="clear" class="btn btn-outline-secondary"><i class="fa fa-times"></i> </button>
        </div>
        <div class="text-success">@Model.SuccessMessage</div>
        <div class="text-danger">@Model.ErrorMessage</div>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">CustomerId</th>
                <th scope="col">CustomerName</th>
                <th scope="col">Gender</th>
                <th scope="col">Dob</th>
                <th scope="col">MobileNumber</th>
                <th scope="col">EmailId</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Actions</th>

               
            </tr>
        </thead>
        <tbody>
            @foreach(var s in @Model.Customers)
        { 
            <tr>
                <td>@s.CustomerId</td>
                <td>@s.CustomerName</td>
                <td>@s.Gender</td>
                <td>@s.Dob.ToString("dd-MM-yyyy")</td>
                <td>@s.MobileNumber</td>
                <td>@s.EmailId</td>
                <td>@s.City</td>
                <td>@s.State</td>
                 <td><a href="/Customers/Edit/@s.CustomerId " class="btn btn-outline-warning" role="Button"><i class="fa fa-edit"></i> </a>
                <a href="/Customers/Delete/@s.CustomerId" class="btn btn-outline-danger" role="Button"><i class="fa fa-trash"></i> </a></td>

            </tr>
        }
        </tbody>

    </table>
</form>